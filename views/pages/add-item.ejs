<!-- Page to add items. Uses header and footer partials -->

<% include ../partials/header %>

<div class="container mt-5">
        <div class="row">
          <div class="col-md-5 offset-md-3 card">
            <div class="card-body">
              <form action="/admin/item/add" method="POST" class= "col s12">
                
                <div class="form-group row">
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Name</label>
                            <input type="text" name="name" value=""  class="form-control" maxlength="100" required autofocus>
                        </div>
                        <div class="col-10">
                                <label for="sku" class="col-10 col-form-label">SKU</label>
                                <input type="text" name="sku" value=""  class="form-control" pattern="[0-9]{1,20}" maxlength="20" required>
                            </div>
                        <div class="col-10">
                            <label for="description" class="col-10 col-form-label">Description</label>
                            <input type="text" name="description" value=""  class="form-control" maxlength="255">
                        </div>
                        <div class="col-10">
                            <label for="category" class="col-10 col-form-label">Category</label>
                            <select name="category" class="col-10 form-control" required>
                                    <% for(var i = 1; i < item2.length; i++) { %>
                                        <option value="<%= item2[i].categoryName %>"><%= item2[i].categoryName %></option>
                                        <% } %>
                              </select>
                        </div>
                        <div class="col-10">
                                <label for="weight" class="col-10 col-form-label">Weight</label>
                                <input type="number" name="weight" value=""  class="form-control" min="0" max="99999999999" required>
                            </div>
                        <div class="col-10">
                            <label for="costprice" class="col-10 col-form-label">Cost Price</label>
                            <input type="text" name="costPrice" value=""  class="form-control" pattern="\d+\.\d{1,2}" min="0" max="99999999999" required>
                        </div>
                        <div class="col-10">
                            <label for="retailPrice" class="col-10 col-form-label">Retail Price</label>
                            <input type="text" name="retailPrice" value=""  class="form-control" pattern="\d+\.\d{1,2}" min="0" max="99999999999" required>
                        </div>
                        <div class="col-10">
                            <label for="supplier" class="col-10 col-form-label">Supplier</label>
                            <select name="supplier" class="col-10 form-control" required>
                                <% for(var i = 0; i < item.length; i++) { %>
                                <option value="<%= item[i].supplierID %>"><%= item[i].name %></option>
                                <% } %>
                              </select>
                        </div>
                        <div class="col-10">
                                <input type="hidden" name="active" value="1" class="form-control">
                        </div>
                        <div class="col-10">
                            <label for="caseSize" class="col-10 col-form-label">Case Size</label>
                            <input type="number" name="caseSize" value=""  class="form-control" min="0" max="99999999999" required>
                        </div>
                        <div class="col-10">
                            <label for="notes" class="col-10 col-form-label">Notes</label>
                            <input type="text" name="notes" value=""  class="form-control" maxlength="255">
                        </div>
                </div>

      

                <div class="row">
 
                        <button type="submit" class="btn btn-primary">
                          Submit Item
                        </button> 
        
                        <button class="btn btn-danger"><a href="/admin/item" class="btn btn-danger">Cancel</a></button> 
                    </div>
              </form>
            </div>
          </div>
        </div>
      </div>

<% include ../partials/footer %>