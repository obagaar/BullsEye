<% include ../partials/header %>




<div class="container-fluid">
    <div class="row">
        <div class=col-sm-4></div>
        <div class=col-sm-4>
            <center>
                <div class="jumbotron">
                    <h2 class="form-signin-heading">Log In</h2>
                    <br>
                    <div class="row">
                        <div class=col-sm-1></div>
                        <div class=col-sm-10>
                            <form class="form-signin" action="/login" method="POST">
                                <% if(error.length > 0) { %>

                                    <div class="alert alert-danger" role="alert"><%= error %></div>
                                <%}%>
                                
                                <h4>Username</h4><input type="text" name="username" value="" class="form-control" maxlength="11" pattern="[0-9]{1,11}" required autofocus>
                                <br>
                                <h4>Password</h4><input type="password" name="password" value="" class="form-control" maxlength="32" required autocomplete="password">
                                <br>
                            
                        </div>
                        <div class=col-sm-1></div>
                    </div>
                    <div class="row">

                        <br>
                        <button class="btn btn-lg btn-primary btn-block" type="submit" id="btnLogin">Log in</button>
                        </form>
                    </div>

                </div>
        </div>
        <div class=col-sm-4></div>
    </div>
</div>

<% include ../partials/footer %>