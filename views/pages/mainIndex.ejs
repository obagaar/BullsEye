<% include ../partials/header %>

<div class="container-fluid">
    <div class="row">
        <div class=col-sm-4></div>
        <div class=col-sm-4>
            <center>
                <div class="jumbotron">
                    <h2 class="form-signin-heading">Log In</h2>
                    <div class="row">
                        <div class=col-sm-1></div>
                        <div class=col-sm-10>
                            <form class="form-signin" action="/login/inputUsername/inputPassword" method="POST">

                                <h4>Username</h4><input type="email" name="inputUsername" value="" class="form-control" required autofocus>
                                <br>
                                <h4>Password</h4><input type="password" name="inputPassword" value="" class="form-control" required autocomplete="password">
                                <br>
                                <br><br>
                            
                        </div>
                        <div class=col-sm-1></div>
                    </div>
                    <div class="row">

                        <br>
                        <button class="btn btn-lg btn-primary btn-block" type="submit" id="btnLogin">Log in</button>
                        <button class="btn btn-lg btn-primary btn-block" type="submit" id="btnContinueAsGuest" style="float: right;">Forgot
                            Password</button>
                        </form>
                    </div>

                </div>
        </div>
        <div class=col-sm-4></div>
    </div>
</div>

<% include ../partials/footer %>