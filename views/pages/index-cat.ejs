<!-- Index page for categories. Uses header and footer partials -->
<% include ../partials/header %>


<div class="row">

        <% include ../partials/menuDashboard %>
        <div class="col-sm-9 col-md-9">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Categories</h3>
                  </div>
                  <div class="panel-body">

                        <div class="">
                                <div class="col s12">
                                    <a href="/admin/cat/add" class="btn btn-success btn-lg">Add a new Category</a>
                                </div>
                            </div>
                            <br>
                            
                            <div class="">
                                <div class="col s12">
                                    <% if (items.length > 0) { %>
                                        <table class="table">
                                            <thread>
                                                <tr>
                                                    <th style="width: 5%; text-align: center;">Name</th>
                                                    <th solspan="2" style="width: 20%; text-align: center;">Actions</th>
                                                </tr>
                                            </thread>
                                            <tbody>
                                                <% for(var i = 0; i < items.length; i++) { %>
                                                <tr>
                                                    <td style="width: 1%; text-align: center;"><%= items[i].categoryName %></td>
                                                    <td solspan="2" style="width: 20%; text-align: center;">
                                                    <a href="/admin/cat/update/<%= items[i].categoryName %>" class="btn btn-success">Edit</a>
                                                    <a href="/admin/cat/delete/<%= items[i].categoryName %>" class="btn btn-danger">Delete</a>
                                                </td>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                            
                                        <%} else { %>
                                        <p><strong>There are no records available.</strong></p>
                                        <% } %>
                                </div>
                            </div>
                    
                    </div>
                  </div>
                </div>
              </div>
            </div>




<% include ../partials/footer %>