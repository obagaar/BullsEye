<!-- Page to add items. Uses header and footer partials -->

<% include ../partials/header %>

<script src='/js/groupOrders.js' ></script>

<div class="container">
        <div class="row">
          <div class="card">
            <div class="card-body">
              <form action="/delivery/groupNext4" method="POST" class= "col-12">
                
                <div class="form-group row">
                        <div class="col-12">
                          <h3>Group Orders - Delivery Info</h3>
                </div>

                <div class="col-12">
                    <h4>Delivery Number <%= deliveryID %></h4>
                    <input type='hidden' name="deliveryID" class="form-control" value='<%=deliveryID%>' readonly>
          </div>

                <div class="col-12">

                    <h5>Order Numbers</h5>

                  <% for(var i = 0; i < txnIDs.length; i++) { %>

                  <p><input type='text' name="txnIDs[]" class="form-control" value='<%=txnIDs[i]%>' readonly></p> 

                  <% } %>

                </div>

               <div class="col-12">

                  <h5>Delivery Weight</h5>

                  <p><input type='text' name="deliveryWeight" class="form-control" value='<%=deliveryWeight%>' readonly></p>                       
                        
               </div>

               <div class="col-12">

               <h5>Delivery Distance</h5>

               <p><input type='text' name="deliveryDistance" class="form-control" value='<%=deliveryDistance%>' readonly></p>                       
                     
            </div>

               <div class="col-12">

                  <h5>Viehicle type</h5>

                  <p><input type='text' name="vehicle" class="form-control" value='<%=vehicle%>' readonly></p> 
                        
               </div>

               <div class="col-12">

                  <h5>Total Cost</h5>

                  <p><input type='text' name="totalCost" class="form-control" value='<%=totalCost%>' readonly></p> 
                        
               </div>
                

                <div class="row">
 
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button> 
        
                        <button class="btn btn-danger"><a href="/delivery" class="btn btn-danger">Cancel</a></button> 
                    </div>
              </form>
            </div>
          </div>
        </div>
      </div>

<% include ../partials/footer %>