<% include ../partials/header %>

<div class="container mt-5">
        <div class="row">
          <div class="col-md-5 offset-md-3 card">
            <div class="card-body">
              <form action="/admin/crud/supp/add" method="POST" class= "col s12">
                
                <div class="form-group row">
                    <input type="hidden" name="supplierID" value="">
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Supplier Name</label>
                            <input type="text" name="name" value=""  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="address1" class="col-10 col-form-label">Address Line 1</label>
                            <input type="text" name="address1" value=""  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Address Line 2</label>
                            <input type="text" name="address2" value=""  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">City</label>
                            <input type="text" name="city" value=""  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Country</label>
                            <input type="text" name="country" value=""  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                                <label for="province" class="col-10 col-form-label">Province/State</label>
                                <select name="province" class="col-10 form-control">
                                        <% for(var i = 0; i < items.length; i++) { %>
                                            <option value="<%= items[i].provinceID %>"><%= items[i].provinceID %></option>
                                            <% } %>
                                  </select>
                            </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Postal Code/Zip Code</label>
                            <input type="text" name="postalcode" value=""  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Phone</label>
                            <input type="text" name="phone" value=""  class="form-control" autofocus>
                        </div>
                        <br>
                        <div class="col-10">
                            <label for="contact" class="col-10 col-form-label">Contact</label>
                            <input type="text" name="contact" value=""  class="form-control" autofocus>
                        </div>
                </div>

      
                <button type="submit" class="btn btn-primary">
                  Submit Site
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

<% include ../partials/footer %>