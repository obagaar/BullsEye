<% include ../partials/header %>

<div class="container mt-5">
        <div class="row">
          <div class="col-md-5 offset-md-3 card">
            <div class="card-body">
              <form action="/admin/crud/site/update/<%= item[0].siteID %>" method="POST" class= "col s12">
                
                <div class="form-group row">
                    <input type="hidden" name="siteID" value="<%= item[0].siteID %>">
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Site Name</label>
                            <input type="text" name="name" value="<%= item[0].name %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="provinceID" class="col-10 col-form-label">Province/State</label>
                            <select name="provinceID" class="col-10 form-control">
                                    <option value="NB">NB</option>
                              </select>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Address Line 1</label>
                            <input type="text" name="address" value="<%= item[0].address %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Address Line 2</label>
                            <input type="text" name="address2" value="<%= item[0].address2 %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">City</label>
                            <input type="text" name="city" value="<%= item[0].city %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Country</label>
                            <input type="text" name="country" value="<%= item[0].country %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Postal Code/Zip Code</label>
                            <input type="text" name="postalCode" value="<%= item[0].postalCode %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="name" class="col-10 col-form-label">Phone</label>
                            <input type="text" name="phone" value="<%= item[0].phone %>"  class="form-control" autofocus>
                        </div>
                        <br>
                        <div class="col-10">
                            <label for="dayOfWeek" class="col-10 col-form-label">Delivery Day of the Week</label>
                            <select name="dayOfWeek" class="col-10 form-control">
                                <option value="MONDAY">Monday</option>
                                <option value="TUESDAY">Tuesday</option>
                                <option value="WEDNESDAY">Wednesday</option>
                                <option value="THURSDAY">Thursday</option>
                                <option value="FRIDAY">Friday</option>
                              </select>
                        </div>
                        <br>
                        <div class="col-10">
                            <label for="distanceFromWH" class="col-10 col-form-label">Distance from the Warehouse</label>
                            <input type="text" name="distanceFromWH" value="<%= item[0].distanceFromWH %>"  class="form-control" autofocus>
                        </div>
                        <div class="col-10">
                            <label for="notes" class="col-10 col-form-label">Notes</label>
                            <input type="text" name="notes" value="<%= item[0].notes %>"  class="form-control" autofocus>
                        </div>
                </div>

      
                <button type="submit" class="btn btn-primary">
                  Submit Site
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

<% include ../partials/footer %>